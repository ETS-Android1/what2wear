<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.What2Wear" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/blue_main</item>
        <item name="colorPrimaryVariant">@color/accentBlue_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowLightStatusBar">false</item> <!-- background -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Splash theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/teal_200</item>
        <item name="colorAccent">@color/teal_200</item> <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item> <!-- white status bar -->
        <item name="android:statusBarColor">@color/blue_main</item>
        <item name="android:windowLightStatusBar">false</item> <!-- background -->
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>